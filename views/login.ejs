<!DOCTYPE html>
<html>
<head>
  <!-- Standard Meta -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

  <!-- Site Properties -->
  <title>Login</title>
    <script src="https://www.gstatic.com/firebasejs/4.13.0/firebase.js"></script>
    <script src="/javascripts/firebaseauth.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.css"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.js"></script>
  <style type="text/css">
    body {
      background-color: #DADADA;
    }
    body > .grid {
      height: 100%;
    }
    .image {
      margin-top: -100px;
    }
    .column {
      max-width: 450px;
    }
  </style>
  <script>
  $(document)
    .ready(function() {
      $('.ui.form')
        .form({
          fields: {
            email: {
              identifier  : 'email',
              rules: [
                {
                  type   : 'empty',
                  prompt : 'Please enter your e-mail'
                },
                {
                  type   : 'email',
                  prompt : 'Please enter a valid e-mail'
                }
              ]
            },
            password: {
              identifier  : 'password',
              rules: [
                {
                  type   : 'empty',
                  prompt : 'Please enter your password'
                },
                {
                  type   : 'length[6]',
                  prompt : 'Your password must be at least 6 characters'
                }
              ]
            }
          }
        })
      ;
    })
  ;
  </script>
</head>
<body>

<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <!--<img src="assets/images/logo.png" class="image">-->
      <div class="content">
        Log-in to your account
      </div>
    </h2>
    <form class="ui large form">
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <input type="text" id="email" placeholder="E-mail address">
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <input type="password" id="password" placeholder="Password">
          </div>
        </div>
        <div class="ui fluid large teal submit button" id="login_button">Login</div>
          <script>
              // language=JQuery-CSS
              $( "#login_button" ).click(function() {
                  firebase.auth().signInWithEmailAndPassword($("#email").val(), $("#password").val()).catch(function(error) {
                      // Handle Errors here
                      console.log(error.code)
                      if(error.code == null) {

                      }
                      else{
                          alert(error.message);
                      }
                      // ...
                  });
              });

          </script>
      </div>

      <div class="ui error message"></div>



      <div class="ui modal" id="newuser">
          <div class="ui middle aligned center aligned grid">
              <div class="column">
                  <h2 class="ui teal image header">
                      <div class="content">
                          Create new account
                      </div>
                      <form class="ui large form">
                          <div class="ui stacked segment">
                              <div class="field">
                                  <div class="ui left icon input">
                                      <i class="user icon"></i>
                                      <input type="text" id="email2" placeholder="E-mail address">
                                  </div>
                              </div>
                              <div class="field">
                                  <div class="ui left icon input">
                                      <i class="lock icon"></i>
                                      <input type="password" id="password2" placeholder="Password">
                                  </div>
                              </div>
                              <div class="field">
                                  <div class="ui left icon input">
                                      <i class="lock icon"></i>
                                      <input type="password" id="retypepassword2" placeholder="Password">
                                  </div>
                              </div>
                              <div class="ui fluid large teal button" id="create_account">Create Account</div>
                              <script>
                                  // language=JQuery-CSS
                                  $('#create_account').click(function(){
                                      console.log($('#email2').val(), $('#password2').val(), $('#retypepassword2').val())
                                      if($('#password2').val() === $('#retypepassword2').val()){
                                          firebase.auth().createUserWithEmailAndPassword($('#email2').val(), $('#password2').val()).catch(function(error) {
                                              // Handle Errors here.
                                              if(error.code == null) {
                                                  $('#newuser').modal('hide');
                                              }
                                              else{
                                                  alert(error.message);
                                              }
                                              // ...
                                          });
                                      }
                                  });

                              </script>
                          </div>

                          <div class="ui error message"></div>


                  </h2>
              </div>
          </div>
      </div>

      <script>
          function newuser(){
              console.log('clicked');
              $('#newuser').modal('show');
          }
      </script>

    <div class="ui message">
      New to us? <a onclick="newuser();">Sign Up</a>
    </div>
  </div>
</div>

</body>

</html>
